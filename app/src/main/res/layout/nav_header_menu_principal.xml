<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/ic_banner"
    android:backgroundTint="@color/colorAccentOne"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nh_iv_Avatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="1dp"
        android:src="@drawable/ic_logo_colegio" />

    <TextView
        android:id="@+id/nh_tv_Usuario"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nh_iv_Avatar"
        android:text="Usuario"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/nh_tv_Rol"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:layout_below="@+id/nh_tv_Usuario"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

</RelativeLayout>
